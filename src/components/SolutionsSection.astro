---
import ServiceCard from './ServiceCard.astro';

const iconLeaf = `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/><path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/></svg>`;
const iconEdu = `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>`;
const iconCycle = `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/></svg>`;
---

<section class="max-w-7xl mx-auto px-6 mb-24">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <ServiceCard 
      title="Agroecología Urbana"
      description="Huertas comunitarias y jardines comestibles. Recuperamos espacios en la ciudad para la soberanía alimentaria."
      icon={iconLeaf}
    />
    <ServiceCard 
      title="Capacitaciones"
      description="Talleres prácticos y cursos online. Aprende el plan de negocio y técnicas de vermicompostaje paso a paso."
      icon={iconEdu}
    />
    <ServiceCard 
      title="Modelo Circular"
      description="Tú generas el fertilizante, <span class='text-[var(--color-secondary)] font-bold'>nosotros lo comercializamos</span>. Rentabilidad ecológica real."
      icon={iconCycle}
      isCore={true}
    />
  </div>
</section>