---
interface Props {
  title: string;
  description: string;
  icon: string;
  isCore?: boolean;
}

const { title, description, icon, isCore = false } = Astro.props;
---

<div class:list={[
  "group relative rounded-3xl p-8 transition-all duration-300 border",
  // Quitamos animate-on-scroll para que se vea SIEMPRE
  // Estilos Base Glass
  "backdrop-blur-xl shadow-lg",
  "bg-white/40 dark:bg-white/5 border-white/50 dark:border-white/10",
  isCore ? "border-[var(--color-secondary)]/60 shadow-xl ring-1 ring-[var(--color-secondary)]/20" : "hover:shadow-xl hover:-translate-y-2"
]}>
  
  {isCore && (
    <>
      <div class="absolute top-0 right-0 bg-[var(--color-secondary)] text-white text-[10px] font-bold px-3 py-1 rounded-bl-xl rounded-tr-3xl uppercase tracking-wider shadow-sm z-20">
        Core
      </div>
      <div class="absolute -right-10 -top-10 w-32 h-32 bg-[var(--color-secondary)]/20 blur-3xl rounded-full pointer-events-none"></div>
    </>
  )}

  <div class:list={[
    "w-14 h-14 rounded-2xl flex items-center justify-center mb-6 transition-transform group-hover:scale-110",
    isCore ? "bg-green-100/80 dark:bg-green-900/30 text-[var(--color-secondary)]" : "bg-gray-100/80 dark:bg-gray-800/50 text-gray-700 dark:text-gray-300"
  ]}>
    <Fragment set:html={icon} />
  </div>

  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 relative z-10">
    {title}
  </h3>
  
  <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed relative z-10">
    {isCore ? <Fragment set:html={description} /> : description}
  </p>
</div>