<style>
  /* --- CONTENEDOR PRINCIPAL --- */
  .kenos-card {
    display: flex;
    flex-direction: column;
    text-decoration: none; /* Quitar subrayado de enlace */
    background: linear-gradient(135deg, #f0f9ff 0%, #ffffff 100%);
    border: 1px solid #bae6fd;
    border-radius: 24px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 10px 15px -3px rgba(14, 165, 233, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s;
    margin-bottom: 4rem; /* Espacio inferior */
  }

  /* Dark Mode Styles */
  :global(.dark) .kenos-card {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 58, 138, 0.2) 100%);
    border-color: rgba(56, 189, 248, 0.2);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
  }

  /* Hover Effect */
  .kenos-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(14, 165, 233, 0.2);
    border-color: var(--color-secondary, #4ade80);
  }
  :global(.dark) .kenos-card:hover {
    box-shadow: 0 20px 25px -5px rgba(56, 189, 248, 0.1);
  }

  /* Layout Desktop */
  @media (min-width: 768px) {
    .kenos-card {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 1rem;
    }
  }

  /* --- SECCI√ìN INFO (IZQUIERDA) --- */
  .kenos-info {
    padding: 2rem;
    flex: 1;
    z-index: 10;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #e0f2fe;
    color: #0284c7;
    font-size: 0.75rem;
    font-weight: 800;
    padding: 6px 12px;
    border-radius: 99px;
    margin-bottom: 1rem;
    border: 1px solid #bae6fd;
  }
  :global(.dark) .status-badge {
    background: rgba(14, 165, 233, 0.15);
    color: #7dd3fc;
    border-color: rgba(56, 189, 248, 0.3);
  }

  .pulsing-dot {
    width: 8px;
    height: 8px;
    background-color: #0ea5e9;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0% { transform: scale(0.95); opacity: 1; box-shadow: 0 0 0 0 rgba(14, 165, 233, 0.7); }
    70% { transform: scale(1); opacity: 1; box-shadow: 0 0 0 6px rgba(14, 165, 233, 0); }
    100% { transform: scale(0.95); opacity: 1; box-shadow: 0 0 0 0 rgba(14, 165, 233, 0); }
  }

  h2 {
    font-size: 2rem;
    font-weight: 800;
    color: #0f172a;
    margin-bottom: 0.75rem;
    line-height: 1.1;
  }
  :global(.dark) h2 { color: white; }

  p {
    color: #64748b;
    margin-bottom: 2rem;
    line-height: 1.6;
    max-width: 500px;
  }
  :global(.dark) p { color: #cbd5e1; }

  .highlight {
    color: #0ea5e9;
    font-weight: bold;
  }

  .cta-button {
    display: inline-block;
    background: var(--color-secondary, #4ade80);
    color: white;
    font-weight: bold;
    padding: 12px 32px;
    border-radius: 99px;
    transition: background 0.3s, transform 0.2s;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  .kenos-card:hover .cta-button {
    background: #22c55e;
    transform: scale(1.05);
  }

  /* --- SECCI√ìN VISUAL (DERECHA) --- */
  .kenos-visual {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    background: radial-gradient(circle, rgba(14, 165, 233, 0.1) 0%, transparent 70%);
  }
  @media (min-width: 768px) {
    .kenos-visual { padding: 0 2rem 0 0; justify-content: flex-end; }
  }

  .chat-interface {
    width: 100%;
    max-width: 280px;
    background: white;
    border-radius: 20px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1);
    overflow: hidden;
    transform: rotate(-3deg);
    transition: transform 0.4s ease;
  }
  :global(.dark) .chat-interface {
    background: #1e293b;
    border-color: #334155;
    box-shadow: 0 10px 25px -5px rgba(0,0,0,0.3);
  }

  .kenos-card:hover .chat-interface {
    transform: rotate(0deg) scale(1.02);
  }

  .chat-header {
    background: #0ea5e9; /* Azul cielo */
    padding: 12px;
    display: flex;
    align-items: center;
    gap: 10px;
    color: white;
  }
  
  .avatar {
    width: 32px; height: 32px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
  }
  
  .bot-name { font-weight: bold; font-size: 0.9rem; }
  .online { color: #86efac; font-size: 0.8rem; margin-left: 4px; }

  .messages {
    padding: 15px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    background: #f8fafc;
  }
  :global(.dark) .messages { background: #0f172a; }

  .msg {
    padding: 8px 12px;
    font-size: 0.8rem;
    border-radius: 12px;
    max-width: 85%;
  }
  .msg.received {
    background: white;
    color: #334155;
    border-bottom-left-radius: 2px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  }
  :global(.dark) .msg.received { background: #334155; color: #e2e8f0; }

  .msg.sent {
    background: #e0f2fe;
    color: #0369a1;
    align-self: flex-end;
    border-bottom-right-radius: 2px;
  }
  :global(.dark) .msg.sent { background: #1e40af; color: #dbeafe; }

</style>