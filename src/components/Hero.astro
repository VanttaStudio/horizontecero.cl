---
import HeroContent from './HeroContent'; // Importamos el componente React

interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  buttonHref: string;
}

const { title, subtitle, buttonText, buttonHref } = Astro.props;
---

<section class="relative h-screen w-full overflow-hidden flex items-center">
  
  {/* 1. CAPA DE FONDO: VIDEO Y GRADIENTES */}
  <div class="absolute inset-0 z-0 bg-stone-900">
    <video
      autoplay
      loop
      muted
      playsinline
      poster="/images/poster-video.jpg" 
      class="w-full h-full object-cover object-left" 
    >
      {/* Video de las manos a la izquierda */}
      <source src="/hero.mp4" type="video/mp4" />
    </video>

    {/* --- GRADIENTES CINEMATOGRÁFICOS --- */}
    
    {/* Capa oscura base para bajar el brillo general del video */}
    <div class="absolute inset-0 bg-stone-900/20"></div>
    
    {/* Gradiente desde abajo (hacia arriba) para que el texto inferior se lea bien */}
    <div class="absolute inset-0 bg-gradient-to-t from-stone-900 via-transparent to-stone-900/60 opacity-90"></div>
    
    {/* Gradiente desde la DERECHA (hacia la izquierda) para oscurecer la zona del texto 
        y dejar las manos (izquierda) más brillantes. */}
    <div class="absolute inset-0 bg-gradient-to-l from-stone-900/70 via-stone-900/20 to-transparent"></div>
  </div>

  {/* 2. CAPA DE CONTENIDO (React + Framer Motion) */}
  {/* El contenedor ocupa toda la pantalla y centra verticalmente el componente */}
  <div class="relative z-10 w-full h-full flex flex-col justify-center">
      
      {/* Usamos client:load para que las animaciones de entrada ocurran apenas carga la página.
          Pasamos todas las props al componente de React.
      */}
      <HeroContent 
        client:load 
        title={title} 
        subtitle={subtitle} 
        buttonText={buttonText} 
        buttonHref={buttonHref} 
      />
      
  </div>

  {/* 3. INDICADOR DE SCROLL (Flechita rebotando) */}
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce text-white/50 pointer-events-none">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>

</section>