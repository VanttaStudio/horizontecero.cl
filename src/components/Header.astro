---
import ThemeSwitcher from './ThemeSwitcher.astro';
---
<header id="site-header" class="fixed top-0 left-0 w-full z-50 text-white transition-all duration-300 ease-in-out">
    <div class="container mx-auto px-6 flex justify-between items-center h-24">
        <a href="/" aria-label="PÃ¡gina de inicio de Horizonte Cero" class="flex-shrink-0">
            <div 
                id="header-logo" 
                class="w-36 h-10 bg-no-repeat bg-center bg-contain"
                role="img"
                aria-label="Logo de Horizonte Cero"
            ></div>
        </a>
        <div class="flex items-center space-x-6">
            <nav class="hidden md:flex space-x-4">
                <a href="/" class="px-3 py-2 text-base font-medium rounded-md transition-colors duration-200 group relative">
                    Inicio
                    <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/nosotros" class="px-3 py-2 text-base font-medium rounded-md transition-colors duration-200 group relative">
                    Nosotros
                    <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/servicios" class="px-3 py-2 text-base font-medium rounded-md transition-colors duration-200 group relative">
                    Servicios
                    <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="/contacto" class="px-3 py-2 text-base font-medium rounded-md transition-colors duration-200 group relative">
                    Contacto
                    <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                </a>
            </nav>
            <ThemeSwitcher />
        </div>
    </div>
</header>