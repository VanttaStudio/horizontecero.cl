---
/* src/components/ThemeSwitcher.astro */
---
<button 
    id="theme-toggle" 
    type="button" 
    class="text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 focus:outline-none focus:ring-4 focus:ring-slate-200 dark:focus:ring-slate-700 rounded-lg text-sm p-2.5 transition-colors cursor-pointer"
    aria-label="Cambiar tema"
>
    <svg 
        id="theme-toggle-dark-icon" 
        class="hidden w-5 h-5" 
        fill="currentColor" 
        viewBox="0 0 20 20" 
        xmlns="http://www.w3.org/2000/svg"
    >
        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
    </svg>

    <svg 
        id="theme-toggle-light-icon" 
        class="hidden w-5 h-5" 
        fill="currentColor" 
        viewBox="0 0 20 20" 
        xmlns="http://www.w3.org/2000/svg"
    >
        <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
    </svg>
</button>

<script is:inline>
    // LÓGICA DE CAMBIO DE TEMA
    const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
        
        // Actualizamos iconos inmediatamente
        updateThemeIcons();
    };

    const updateThemeIcons = () => {
        const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
        const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
        
        // Seguridad por si no encuentra los iconos en el DOM
        if (!themeToggleDarkIcon || !themeToggleLightIcon) return;

        const isDark = document.documentElement.classList.contains('dark');
        
        // Lógica visual:
        // Si es Dark Mode -> Mostramos icono de LUNA (o Sol, depende tu gusto)
        // Aquí ajusté para que muestre el icono que representa el estado actual
        if (isDark) {
            themeToggleLightIcon.classList.add('hidden');
            themeToggleDarkIcon.classList.remove('hidden');
        } else {
            themeToggleLightIcon.classList.remove('hidden');
            themeToggleDarkIcon.classList.add('hidden');
        }
    };

    // Función principal de inicialización
    function initTheme() {
        const themeToggleBtn = document.getElementById('theme-toggle');
        
        if (themeToggleBtn) {
            // Limpiamos eventos anteriores para no duplicar
            themeToggleBtn.removeEventListener('click', handleToggleClick);
            // Agregamos el evento click
            themeToggleBtn.addEventListener('click', handleToggleClick);
        }
        
        // Aseguramos que los iconos estén correctos al cargar
        updateThemeIcons();
    }

    // EJECUTAR:
    // 1. Cuando carga la página por primera vez
    initTheme();

    // 2. Cuando Astro termina de cambiar la página (View Transitions)
    document.addEventListener('astro:page-load', initTheme);
</script>