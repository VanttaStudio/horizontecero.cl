---
// Iconos SVG
const iconTarget = `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>`;
const iconEye = `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>`;
const iconHeart = `<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`;
---

<div class="dna-grid">
    <div class="glass-card">
        <div class="icon-box blue"><Fragment set:html={iconTarget} /></div>
        <h3>Misión</h3>
        <p>Promover la sostenibilidad a través de soluciones accesibles que respeten el medio ambiente.</p>
    </div>

    <div class="glass-card">
        <div class="icon-box green"><Fragment set:html={iconEye} /></div>
        <h3>Visión</h3>
        <p>Ser un referente nacional en prácticas eco-sostenibles, donde la biodiversidad y el desarrollo humano coexistan.</p>
    </div>

    <div class="glass-card">
        <div class="icon-box purple"><Fragment set:html={iconHeart} /></div>
        <h3>Valores</h3>
        <p>Nos guiamos por la investigación, innovación, responsabilidad, colaboración y transparencia.</p>
    </div>
</div>

<style>
    /* GRID DE 3 COLUMNAS REAL */
    .dna-grid {
        display: grid;
        grid-template-columns: 1fr; /* Móvil */
        gap: 20px;
        margin-bottom: 80px;
        width: 100%;
    }
    
    @media (min-width: 900px) {
        .dna-grid {
            grid-template-columns: repeat(3, 1fr); /* Escritorio: 3 Columnas */
        }
    }

    /* ESTILO PRO GLASS */
    .glass-card {
        background: rgba(255, 255, 255, 0.65); /* Transparencia calibrada */
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 24px;
        padding: 40px 20px;
        text-align: center;
        display: flex; flex-direction: column; align-items: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 10px 20px -5px rgba(0,0,0,0.05);
    }
    :global(.dark) .glass-card {
        background: rgba(30, 41, 59, 0.6);
        border-color: rgba(255,255,255,0.1);
        color: white;
    }

    .glass-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 30px -10px rgba(0,0,0,0.1);
        border-color: var(--color-secondary, #4ade80);
    }

    .icon-box { width: 64px; height: 64px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 20px; }
    .blue { background: #e0f2fe; color: #0284c7; }
    .green { background: #dcfce7; color: #166534; }
    .purple { background: #f3e8ff; color: #7e22ce; }
    
    h3 { font-size: 1.5rem; font-weight: 800; margin: 10px 0; color: #1e293b; }
    :global(.dark) h3 { color: white; }
    p { color: #475569; font-size: 0.95rem; line-height: 1.6; }
    :global(.dark) p { color: #cbd5e1; }
</style>